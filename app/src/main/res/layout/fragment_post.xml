<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ron.detectad.Activities.PostFragment"
    tools:showIn="@layout/activity_post">

    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameTxt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_weight="1"
        android:onClick="post_clicked"
        android:text="@string/title_activity_post"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/descTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTxt"
        android:layout_below="@+id/nameTxt"
        android:ems="10"
        android:hint="Enter Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ipTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descTxt"
        android:layout_below="@+id/descTxt"
        android:ems="10"
        android:hint="Enter IP"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/hashTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ipTxt"
        android:layout_below="@+id/ipTxt"
        android:ems="10"
        android:hint="Enter Hash"
        android:inputType="textPersonName" />

</RelativeLayout>
