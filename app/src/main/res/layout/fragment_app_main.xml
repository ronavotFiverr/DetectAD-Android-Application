<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ron.detectad.Fragments.AppMainActivityFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#253748"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/top_banner_bar" />
            >


        </android.support.v7.widget.Toolbar>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/app_button"
            android:drawableLeft="@drawable/rocket"
            android:onClick="scan_url_clicked"
            android:text="Scan URL"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/app_button"
            android:drawableLeft="@drawable/lightning"
            android:onClick="feed_clicked"
            android:text="Pulses Feed"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            tools:ignore="OnClick" />

    </LinearLayout>

</FrameLayout>

